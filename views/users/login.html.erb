<% @title="Login" %>
<p><%= params[:notice] %></p>

<%= form_tag("post_login", :method => "post") do %>
	<table class="form">
	  <tr>
	  	<td><%= link_to("Register New Account",url_for(:controller=>'users',:action=>'new')) %> </td>
	  	<td></td>
	  </tr>
	  <tr>
	    <td class="label"><%= label_tag(:login_name, "Login:") %></td>
	    <td><%= text_field_tag(:login_name) %></td>
	  </tr>
	  <tr>
	    <td class="label"><%= label_tag(:pass, "Password:") %></td>
	    <td><%= password_field_tag(:pass) %></td>
	  </tr>
	  <tr>
	  	<td> <%= submit_tag("Submit") %> </td>
	  	<td></td>
	  </tr>
	</table>
    
<% end %>

